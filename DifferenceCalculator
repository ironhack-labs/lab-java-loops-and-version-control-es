// DifferenceCalculator.java
public class DifferenceCalculator {
    // Task 1: Find the difference between the largest and smallest values
    public static int findDifference(int[] array) {
        // Check if the array has at least 1 element
        if (array.length < 1) {
            throw new IllegalArgumentException("Array must have at least 1 element");
        }

        // Initialize min and max to the first element
        int min = array[0];
        int max = array[0];

        // Iterate through the array to find the min and max
        for (int i = 1; i < array.length; i++) {
            // If the current element is smaller than the current min, update min
            if (array[i] < min) {
                min = array[i];
            }
            // If the current element is larger than the current max, update max
            if (array[i] > max) {
                max = array[i];
            }
        }

        // Calculate and return the difference
        return max - min;
    }

    // Method to calculate the difference between the largest and smallest values in an array
    public static int calculateDifference(int[] array) {
        // Initialize variables for the maximum and minimum values
        int max = array[0];
        int min = array[0];

        // Find the maximum and minimum values in the array
        for (int num : array) {
            if (num > max) {
                max = num;
            }
            if (num < min) {
                min = num;
            }
        }

        // Calculate the difference and return it
        return max - min;
    }
}
